<%= form_with model: album do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% album.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :year %><br>
    <%= form.number_field :year, in: 1900..Date.today.year %><br>
    <% album.errors.full_messages_for(:year).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   
  <div>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :artist_id %><br>
    <%= form.select :artist_id, options_for_select(Artist.all.map{|a|[a.name, a.id]}) %>
    <% album.errors.full_messages_for(:artist_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :cover %><br>
    <%= form.file_field :cover %>
    <% album.errors.full_messages_for(:cover).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <%= form.submit %>
  </div>
  
<% end %>
