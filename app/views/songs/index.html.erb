<h1>Songs</h1>
<p><%= link_to "Add new song", new_song_path %></p>
<ul>
  <% @songs.each do |song| %>
    <li>
      <%= link_to song_path(song) do %>
      <% if song.album.cover.attached? %>
        <%= image_tag(song.album.cover.variant(:thumb))%>
      <% end %>  
      <%= song.title %>
      <% end %>
    </li>
  <% end %>
</ul> 
<p><%= link_to "Add New Albums", new_album_path %></p> 

