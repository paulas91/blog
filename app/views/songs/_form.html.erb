<%= form_with model: song do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% song.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% song.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>  
  <div>
    <%= form.label :album %><br>
    <%= form.select :album_id, options_for_select(Album.all.map{|a|[a.name, a.id]}) %>
    <% song.errors.full_messages_for(:album).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

