<h2><%= @shop.name %></h2>

<p><%= @shop.description %></p>
<p><%= link_to @shop.domain, @shop.url, target: "_blank" %></p>
<p><%= @shop.adress %></p>
<p><%= @shop.phone %></p>
<p><%= @shop.workers_number %></p>
<p><%= link_to "edit", edit_shop_path(@shop) %></p>
<p><%= link_to "delete", shop_path(@shop), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }   %></p>
