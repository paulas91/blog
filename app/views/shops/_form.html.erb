<%= form_with model: shop do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% shop.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :domain %><br>
    <%= form.text_field :domain %><br>
    <% shop.errors.full_messages_for(:domain).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% shop.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :adress %><br>
    <%= form.text_field :adress %><br>
    <% shop.errors.full_messages_for(:adress).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :phone %><br>
    <%= form.telephone_field :phone %><br>
    <% shop.errors.full_messages_for(:phone).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :workers_number %><br>
    <%= form.number_field :workers_number %><br>
    <% shop.errors.full_messages_for(:workers_number).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <% if shop.persisted? %>
    <div>
      <%= form.label :product_ids %><br>
      <%= form.select :product_ids, options_for_select(Product.all.map{|a|[a.name, a.id]}, shop.product_ids), {prompt: '-Select-'}, {:multiple => true} %>
    </div>
  <% end %>
  



  <div>
    <%= form.submit %>
  </div>
<% end %>