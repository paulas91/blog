<%= form_with model: product, url: url do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <% product.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <div>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <% product.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>


